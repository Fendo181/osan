<p>ユーザ新規作成画面</p>
<h1>Sign up</h1>

<div>
  <%= form_for(@user) do |f| %>
  <ul>
    <li>
      <!-- <%= f.label :email %> -->
      <%= f.email_field :email, :placeholder => "email" %>
    </li>
    <li>
      <!-- <%= f.label :password %> -->
      <%= f.password_field :password,:placeholder => "password" %>
    </li>
    <li>
      <!-- <%= f.label :name %> -->
      <%= f.text_field :name, :placeholder => "ユーザ名" %>
    </li>
    <%= f.submit "登録する"%>
  </ul>
  <% end %>
</div>
